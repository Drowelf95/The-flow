{% extends 'baseBO.html.twig' %}

{% block title %}The flow | Profil{% endblock %}

{% block body %}

<header>
  <!-- Title -->
  <div class="bo-segView-title">
      <h2>THE PROFIL</h2>
      <p>This is where you can change stuff about you.</p>
      <p class="text-sm">Don't make a mess... I kept it tidy !</p>
  </div>

  <!-- Alerts -->
  <div class="dispNone">
    <div class="alert alert-primary" role="alert">
      A simple primary alert—check it out!
    </div>

    <div class="alert alert-danger" role="alert">
      A simple danger alert—check it out!
    </div>

    <div class="alert alert-success" role="alert">
      A simple success alert—check it out!
    </div>
  </div>
</header>

<section>
  <!-- Forms -->
  {{ form_start(form) }}
  <div class="form-group">
    <label>New username</label>
    {{ form_widget(form.username)}}
    <small class="form-text text-muted">Make it what ever you want just be nice.</small>
  </div>
  <div class="form-group">
    <label>Old password</label>
    {{ form_errors(form.password) }}
    {{ form_widget(form.password)}}
    <small class="form-text text-muted">Yeah... You got to remember this one...</small>
  </div>
  <div class="form-group">
    <label>New password</label>
    {{ form_errors(form.new_password) }}
    {{ form_widget(form.new_password)}}
  </div>
  <div class="form-group">
    <label>Password confirmation</label>
    {{ form_errors(form.confirm_password) }}
    {{ form_widget(form.confirm_password)}}
  </div>
  <button type="submit" class="btn btn-primary">Save changes</button>
  {{ form_end(form)}}
</section>

{% endblock %}
