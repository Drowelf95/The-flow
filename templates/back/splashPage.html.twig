{% extends 'baseBO.html.twig' %}

{% block title %}The flow | Splash page{% endblock %}

{% block body %}

<header>
  <!-- Title -->
  <div class="bo-segView-title">
      <h2>THE SPLASH PAGE</h2>
      <p>This is the place where you can set the first thing visitor will see.</p>
      <p class="text-sm">So make it nice and shiny !!!</p>
  </div>

  <!-- Alerts -->
    {% block flash_messages %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    {{ message | raw }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endblock %}
</header>

<section>
{% for lastUpdate in update %}
  <p>Last update : {{ lastUpdate.createdAt| date('d/m/Y')}} at {{ lastUpdate.createdAt| date('H:i')}}</p>
{% endfor %}

  {{ form_start(form) }}
    <div class="form-group">
      <label>Website Title</label>
      {{ form_errors(form.Title) }}
      {{ form_widget(form.Title)}}
      <small class="form-text text-muted">This will also be displayed in the navigator's tab.</small>
    </div>
    <div class="form-group">
      <label>Message</label>
      {{ form_errors(form.Message) }}
      {{ form_widget(form.Message)}}
    </div>
    <div class="form-group">
      <label>ID of the youtube video</label>
      {{ form_errors(form.Link) }}
      {{ form_widget(form.Link)}}
      <small id="emailHelp" class="form-text text-muted">Host the video on Youtube and past the ID here.</small>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  {{ form_end(form)}}
</section>

{% endblock %}
