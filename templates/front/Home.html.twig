{% extends 'base.html.twig' %}

{% block title %}The flow | JS{% endblock %}

{% block body %}

<!--Splash page-->

<!--Segments-->
<div class="fv-scrollUp-Cont dispNone">
    <div class="fv-scrollUp anchor" id="upAnchor">
        <i class="fas fa-angle-double-up"></i>
    </div>
</div>

<!-- The video -->
{% for screen in splash %}
<div id="homeAnchor" class="anchor"></div>
    <section class="wrapper ">
        <div class="video-background">
            <div class="video-foreground">
                <iframe src="https://www.youtube.com/embed/{{ screen.Link }}?controls=0&showinfo=0&rel=0&autoplay=1&loop=1&mute=1&playlist={{ screen.Link }}" allowfullscreen></iframe>  
                {# <img src="{{ asset('img/back01.png') }}" alt=""> #}
            </div>
        </div>
        <div class="overlay"></div>
        <div class="splash-text">
            <div class="splash-text-container">
                <h1>{{ screen.Title }}</h1>
                <h3>{{ screen.Message }}</h3>
                <div class="icon-group">
                    <i class="fv-icon fab fa-html5" data-toggle="tooltip" data-placement="bottom" title="HTML5"></i>
                    <i class="fv-icon fab fa-css3-alt" data-toggle="tooltip" data-placement="bottom" title="CSS3"></i>
                    <i class="fv-icon fab fa-php" data-toggle="tooltip" data-placement="bottom" title="PHP"></i>
                    <i class="fv-icon fab fa-js-square" data-toggle="tooltip" data-placement="bottom" title="JavaScript & jQuery"></i>
                    <i class="fv-icon fab fa-bootstrap" data-toggle="tooltip" data-placement="bottom" title="Bootstrap"></i>
                    <i class="fv-icon fab fa-symfony" data-toggle="tooltip" data-placement="bottom" title="Symfony"></i>
                    <i class="fv-icon fab fa-font-awesome" data-toggle="tooltip" data-placement="bottom" title="Font Awesome"></i>
                </div>
            </div>
        </div>
        <div class="scroll-wrapper">
            <div id="topAnchor" class="anchor">
                <p>Scroll</p>
            </div>
            <div class="scroll-line"></div>
        </div> 
    </section>
{% endfor %}

<div id="firstAnchor" class="anchor"></div>
{% for segment in segments %}
    <section class="wrapper divider">
        {% for screen in splash %}
            <h4 class="scrollTo" id="scroll-to-{{ segment.id }}">{{ screen.Title }}</h4>
        {% endfor %}

        <p>Selected <br> part</p>
        <h3 data-sal="flip-up" data-sal-delay="200" data-sal-duration="700">{{ segment.part }}</h3>
        
        <div class="scroll-wrapper">
            <div class="scroll-line"></div>
        </div> 
    </section>

    {# First part #}
    <section class="wrapper fv-fpart">
        <div class="video-background">
            <div class="video-foreground">
                <iframe src="https://www.youtube.com/embed/{{ segment.link1 }}?controls=0&showinfo=0&rel=0&autoplay=1&hd=1&loop=1&mute=1&playlist={{ segment.link1 }}" allowfullscreen></iframe>
                {# <img src="{{ asset('img/back02.png') }}" alt=""> #}
            </div>
        </div>
        <h2 data-sal="slide-right" data-sal-delay="300" data-sal-duration="1600">{{ segment.title1 }}</h2>
        <div class="fv-fpart-message">
            <p class="column-wrap">{{ segment.message2 }}</p>
        </div>
        <div class="scroll-wrapper">
            <div class="scroll-line"></div>
        </div>
    </section>

    {# Second part #}
    <section class="wrapper fv-spart">
        <div class="scroll-wrapper-top">
            <div class="scroll-line-top"></div>
        </div> 
        <h2>{{ segment.title2 }}</h2>

        <div class="fv-spart-message">
            <p class="column-wrap">{{ segment.message2 }}</p>
        </div>

        <!--Video-->
        {% if segment.link2  %}
            <div class="fv-spart-mVideo">
                <iframe  src="https://www.youtube.com/embed/{{ segment.link2 }}?controls=0&showinfo=0&rel=0&autoplay=1&hd=1&loop=1&mute=1&playlist={{ segment.link2 }}" allowfullscreen></iframe>
            </div>
        {% endif %}

        <!--Spacer-->
        {% if segment.link2 and segment.linkS1 %}
            <div class="fv-spacer"></div>
        {% endif %}

        <!--Slider-->
        {% if segment.linkS1  %}
            <div class="fv-spart-mSlider">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% if segment.linkS1 %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        {% endif %}

                        {% if segment.linkS2 %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        {% endif %}
                        
                        {% if segment.linkS3 %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        {% endif %}
                        
                    </ol>
                    <div class="carousel-inner">
                        {% if segment.linkS1 %}
                            <div class="carousel-item active">
                            <img src="{{ asset('img/uploads/' ~ segment.linkS1 ) }}" class="d-block w-100" alt="...">
                            </div>
                        {% endif %}

                        {% if segment.linkS2 %}
                            <div class="carousel-item">
                            <img src="{{ asset('img/uploads/' ~ segment.linkS2 ) }}" class="d-block w-100" alt="...">
                            </div>
                        {% endif %}

                        {% if segment.linkS3 %}
                            <div class="carousel-item">
                            <img src="{{ asset('img/uploads/' ~ segment.linkS3 ) }}" class="d-block w-100" alt="...">
                            </div>
                        {% endif %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        {% endif %}
    </section>
{% endfor %}

<footer class="wrapper footer">
    <p>Johan SUTTER</p>
    {% for screen in splash %}
        <h3>{{ screen.Title }}</h3>
    {% endfor %}
    <p>Contact : <a href="mailto:johan.sutter@gmail.com">Johan.sutter@gmail.com</a></p>
</footer>

{% endblock %}
