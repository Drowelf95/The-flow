<!--Splash page-->

<!-- The video -->
{% for screen in splash %}
    <section class="wrapper">
    <div class="video-background">
        <div class="video-foreground">
        <iframe src="https://www.youtube.com/embed/{{ screen.Link }}?controls=0&showinfo=0&rel=0&autoplay=1&loop=1&mute=1&playlist={{ screen.Link }}" frameborder="0" allowfullscreen></iframe>
        </div>
    </div>

        </div>
        <div class="overlay"></div>
        <div class="splash-text">
            <div class="splash-text-container">
                <h1>{{ screen.Title}}</h1>
                <h3>{{ screen.Message}}</h3>
                <div class="icon-group">
                    <i class="fab fa-html5" data-toggle="tooltip" data-placement="bottom" title="HTML5"></i>
                    <i class="fab fa-css3-alt" data-toggle="tooltip" data-placement="bottom" title="CSS3"></i>
                    <i class="fab fa-php" data-toggle="tooltip" data-placement="bottom" title="PHP"></i>
                    <i class="fab fa-js-square" data-toggle="tooltip" data-placement="bottom" title="JavaScript & jQuery"></i>
                    <i class="fab fa-bootstrap" data-toggle="tooltip" data-placement="bottom" title="Bootstrap"></i>
                    <i class="fab fa-symfony" data-toggle="tooltip" data-placement="bottom" title="Symfony"></i>
                    <i class="fab fa-font-awesome" data-toggle="tooltip" data-placement="bottom" title="Font Awesome"></i>
                </div>
            </div>
        </div>
        <div class="scroll-wrapper">
            <div class="scroll-line"></div>
        </div> 
    </section>
{% endfor %}

{% for segment in segments %}
    <section class="wrapper divider">
        {% for screen in splash %}
            <h4>{{ screen.Title}}</h4>
        {% endfor %}

        <p>Selected <br> part</p>
        <h3>{{ segment.part}}</h3>
        
        <div class="scroll-wrapper">
            <div class="scroll-line"></div>
        </div> 
    </section>

    {# First part #}
    <section class="wrapper fv-fpart">
        <div class="video-background">
            <div class="video-foreground">
                <iframe src="https://www.youtube.com/embed/{{ segment.link1 }}?controls=0&showinfo=0&rel=0&autoplay=1&loop=1&mute=1&playlist={{ segment.link1 }}" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
        <h2>{{ segment.title1}}</h2>
        <div class="fv-fpart-message">
            <p class="column-wrap">{{ segment.message2}}</p>
        </div>
        <div class="scroll-wrapper">
            <div class="scroll-line"></div>
        </div>
    </section>

    {# Second part #}
    <section class="wrapper fv-spart">
        <div class="scroll-wrapper-top">
            <div class="scroll-line-top"></div>
        </div> 
        <h2>{{ segment.title2}}</h2>

        <div class="fv-spart-message">
            <p class="column-wrap">{{ segment.message2}}</p>
        </div>

        {# <div class="fv-spart-mVideo">
            <iframe width="760" height="549" src="https://www.youtube.com/embed/{{ segment.link1 }}?controls=0&showinfo=0&rel=0&autoplay=1&loop=1&mute=1&playlist={{ segment.link1 }}" frameborder="0" allowfullscreen></iframe>
        </div> #}

        <div class="fv-spart-mSlider">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                    <img src="{{ asset('img/' ~ segment.linkS1 ) }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                    <img src="{{ asset('img/' ~ segment.linkS2 ) }}" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                    <img src="{{ asset('img/' ~ segment.linkS3 ) }}" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>
{% endfor %}

